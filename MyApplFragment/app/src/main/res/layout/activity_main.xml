<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment12"
        android:name="com.example.myapplfragment.Top_Section_Fragment"
        class="Top_Section_Fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        tools:layout="@layout/top_section_fragment" />

    <fragment
        android:id="@+id/fragment13"
        android:name="com.example.myapplfragment.Bottom_Picture"
        class="Bottom_Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment12"
        android:layout_marginTop="40dp"
        tools:layout="@layout/bottom_picture" />

</RelativeLayout>