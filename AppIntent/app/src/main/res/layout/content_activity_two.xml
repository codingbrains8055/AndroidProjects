<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ActivityTwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#045858"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivityTwo"
    tools:showIn="@layout/activity_two">

    <TextView
        android:id="@+id/textActivityTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/ActivityTwoName" />

    <Button
        android:id="@+id/buttonActivityTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textActivityTwo"
        android:layout_centerInParent="true"
        android:onClick="onClick2"
        android:text="@string/SecondButtonName" />
</RelativeLayout>